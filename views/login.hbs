<div class="margin">
   <div class="row mb-3 row1">
      <div class="col-md-12 themed-grid-col">
         <h2 class="srednji">Login</h2>
         <div class="card">
            <div class="card-body">
               <form action="/login" method="POST">
                  <div class="form-group">
                     <label for="email">Username</label>
                     <input id="email" class="form-control" placeholder="Enter your username" name="username" required>
                  </div>
                  <div class="form-group">
                     <label for="password">Password</label>
                     <input id="password" type="password" class="form-control" placeholder="Enter your password" name="password" required>
                  </div>
                  <button type="submit" class="btn btn-dark">Sign me up</button>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>